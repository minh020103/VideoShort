<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_dark">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="366dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/main_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline" />


    <ImageView
        android:id="@+id/imgHeart"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/icon_heart_seleted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
        android:layout_marginTop="20dp"
        app:tint="@color/main_color_light" />

    <ImageView
        android:id="@+id/imgComment"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/icon_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/imgHeart"
        android:layout_marginTop="20dp"
        app:tint="@color/main_color_light" />

    <ImageView
        android:id="@+id/imgSave"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/icon_save_seleted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/imgComment"
        android:layout_marginTop="20dp"
        app:tint="@color/main_color_light" />

    <ImageView
        android:id="@+id/imgCD"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imgSave" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Đức Minh"
            android:textColor="@color/main_color_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Đức Minh  Nguyễn Đức Minh Nguyễn Đức Minh Nguyễn Đức Minh Nguyễn Đức Minh Nguyễn Đức Minh"
            android:textColor="@color/main_color_light" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>